<div class="row">
  <div class="col-md-12">
    <h2> 购物车 </h2>
     <%= link_to("删除全部",cart_path(@carts), class: "btn btn-md btn-danger pull-right",
          method: :delete, data: { confirm:  "Are you sure?" } ) %>
          <br /> <br />

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
          <th>选项</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to product_path(cart_item.product) do %>
            <% if cart_item.product.image.present? %>
            <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
            <% else %>
             <% image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
             <% end %>
            <% end %>
          </td>
          <td>
            <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
          </td>
          <td>
            <%= cart_item.product.price %>
          </td>
          <td>
            <%= cart_item.quantity %>
          </td>
        <td>
        <%= link_to("+", "#", class:"btn btn-xs btn-success") %> |
        <%= link_to("-", "#", class:"btn btn-xs btn-primary") %>
      </td>
          <td><%= link_to("删除", cart_path(@carts), class: "btn btn-xs btn-danger",
               method: :delete, data: { confirm:  "Are you sure?" } ) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <div class="total clearfix">
      <span class="pull-right">
        <span><%= render_cart_total_price(current_cart) %></span> RMB

      </span>
    </div>

    <hr>
    <div class="checkout clearfix">
      <%= link_to("确认结账","#",method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
